<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="open.kudos" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name=".activities.AuthenticationScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainScreen"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".activities.TimePickingActivity"
            android:label="@string/title_activity_time_picking" >
        </activity>
        <activity
            android:name=".activities.KudosInformationActivity"
            android:label="@string/title_activity_kudos_information" >
        </activity>
    </application>

</manifest>
